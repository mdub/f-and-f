#! /usr/bin/env ruby

$: << File.expand_path("../../lib", __FILE__)

require "clamp"
require "faith_and_farming/book"
require "yaml"

Clamp do

  subcommand "page", "page commands" do

    parameter "N", "page number", :attribute_name => :page_index

    def execute
      page.blocks.each do |block|
        bounds = block.bounds
        puts "\n--- {left #{bounds.left}, right #{bounds.right}, top #{bounds.top}, bottom #{bounds.bottom}}\n"
        puts block.text
      end
    end

    private

    def page
      FaithAndFarming::Book::Page.load(page_index)
    end

  end

  subcommand "tree", "display the tree" do

    def execute
      FaithAndFarming::Book.pages.each do |page|
        puts "\n--- page #{page.page_index} ---"
        page.tree_entries.each do |entry|
          indent = "  " * (entry.level - 1)
          puts "#{entry.level}#{indent}- #{entry.subject.name}"
        end
      end
    end

  end

  subcommand "walk", "display the tree" do

    def execute
      FaithAndFarming::Book.walk(BookListener.new)
    end

  end

  class BookListener

    private

    def method_missing(method, arg)
      puts YAML.dump(method => arg)
    end

  end

end
